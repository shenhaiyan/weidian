.navbar
  .navbar-inner
    .left
      a(href="#").back.link
        i.wdIcon.wdIconBack
    .center.sliding 订单管理
.pages.navbar-through
  .page(data-page="order")
    .page-content.wdOrder
      .list-block
        .buttons-row.orderRow
          a(href="#orderIng")#1100.tab-link.active.button 进行中
            .orderNum
          a(href="#orderEd")#1130.tab-link.button 已完成
          a(href="#orderEnd")#1160.tab-link.button 已关闭
          .orderRowLine
        .orderWrap
          .tabs
            #orderIng.tab.active
              .buttons-row
                a(href="#orderPay1")#1110.tab-link.button.active
                  p#pay1
                  p 待发货
                a(href="#orderPay2")#1120.tab-link.button
                  p#pay2 0
                  p 已发货
              .tabs
                #orderPay1.tab.active
                  #orderListMain.orderBox
                    script(type="text/template7" id="orderList")
                      |{{#rows}}
                      a(href="orderItem.html?oid={{oid}}")
                        .orderLi
                          .imgBox
                            img(src="{{thumbnail}}")
                          .orderTxt
                            p 订单号：
                              span {{oid}}
                            p 买家电话：
                              span {{conntel}}
                            .orderState
                              span {{ordertime}}
                              span.orderStatus {{rdStaHelper orderstatus}}
                      |{{else}}
                      .noData  暂无待发货的订单
                      |{{/rows}}
                  .moreData 点击加载更多
                #orderPay2.tab
                  #orderListMain2.orderBox
                    script(type="text/template7" id="orderList2")
                      |{{#rows}}
                      a(href="orderItem.html?oid={{oid}}")
